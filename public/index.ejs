<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>imgur Auth</title>
    <link rel="stylesheet" type="text/css" href="/styles.css"/>
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png"/>
    <script type="text/javascript" src="/scripts.js"></script>
    <script>
        // Retrieves a state, and a redirect URI
        const state = '<%= state %>';
        const callbackUri = '<%= redirectUri %>';

        // Retrieves a location hash string
        const locationHash = window.location.hash;

        // Build a query params string
        const queryParams = '?state=' + state + locationHash.replace('#', '&');

        // Creates a valid request URI
        const redirectUri = callbackUri + queryParams;

        // Redirects user to default callback URI
        redirect(redirectUri);
    </script>
</head>
<body>
    <div id="appRoot">
        <div id="requestStatus">Processing...</div>
    </div>
</body>
</html>